{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Arkbuddy",
    "version": "1.3.0",
    "minimum-overwolf-version": "0.120.0",
    "author": "TristanGames",
    "icon": "img/logo-small.png",
    "icon_gray": "IconMouseNormal.png",
    "launcher_icon": "desktop-icon.ico",
    "window_icon": "img/logo-small.png",
    "description": "An assortment of easy to use calculators and tools for Ark: Survival  Evolved."
  },
  "permissions": [
    "Hotkeys",
    "Extensions",
    "Streaming",
    "Profile",
    "GameInfo",
    "DesktopStreaming",
    "Tray",
    "VideoCaptureSettings"
    ],
  "data": {
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [10778]
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [10778]
        },
        "start_minimized": false
      }
    ],
    "hotkeys": {
      "arkbuddy_app_showhide": {
        "name": "arkbuddyToggle",
        "title": "Show/Hide App",
        "action-type": "toggle",
        "default": "Ctrl+B",
        "passthrough": false
      },
      "crossHairToggle": { 
        "name": "crosshairToggle",
        "title": "Toggle Crosshair",
        "action-type": "custom",
        "default": "Ctrl+Y",
        "passthrough": true
          }
    },
    "game_events": [10778],
    "start_window": "in_game",
    "windows": {
      "in_game": {
        "file": "windows/in-game/in-game.html",
        "in_game_only": false,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "arkbuddy_app_showhide",
        "transparent": true,
        "resizable": false,
        "block_top_window_navigation": true,
        "restrict_to_game_bounds": false,
        "popup_blocker": true,
        "mute": true,
        "size": {
          "width": 1200,
          "height": 950
        }
      },
      "crosshair": {
        "file": "windows/crosshair/cross.html",
        "transparent": true,
        "resizable":false,
        "clickthrough": true,
        "show_in_taskbar":false,
        "in_game_only": false,
        "size": {"width": 200, "height": 200}
      }
    },
    "protocol_override_domains": { "googlesyndication": "http" },
    "externally_connectable": {
      "matches": [
        "http://*.tristan.games",
        "http://tristan.games",
        "http://arkbuddy.app",
        "http://*.arkbuddy.app",
        "http://arkbuddy.app",
        "http://dododex.com",
        "https://fonts.googleapis.com"
      ]
    },
    "force_browser": "user",
    "process_name": "Arkbuddy",
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
